<form action="/signup" method="POST">
  <% if params[:error] %>
    <p>Error: <%= params[:error] %></p>
  <% end %>
  Username: <br>
  <input type="text" name="user[name]" value="<%= params[:name] %>">
  <br>Password: <br>
  <input type="password" name="user[password]">
  <br>Password Again: <br>
  <input type="password" name="user[password_confirmation]">
  <input type="submit">
</form>